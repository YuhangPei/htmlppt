{
  "name": "html-ppt-editor",
  "version": "1.0.0",
  "description": "A modern web-based HTML PPT editor with visual editing, code editing, and full-screen presentation capabilities",
  "keywords": ["ppt", "editor", "vue", "typescript", "presentation", "html", "css", "javascript"],
  "author": "HTML PPT Editor Team",
  "license": "MIT",
  "homepage": "https://github.com/your-username/htmlppt#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/htmlppt.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/htmlppt/issues"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "element-plus": "^2.4.4",
    "grapesjs": "^0.21.2",
    "grapesjs-preset-webpage": "^1.0.3",
    "monaco-editor": "^0.45.0",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.14.0",
    "@types/node": "^20.10.5",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/tsconfig": "^0.5.1",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "prettier": "^3.1.1",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vue-tsc": "^1.8.25"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
